<center><h2>Search Results:</h2></center>

<% if @blank_message %>
  <h3><%=@blank_message %></h3>
<% end %>

<% if @customers %>
  <ul class="search-results">
    <% @customers.each do |customer| %>
      <li><%= link_to customer.name, customer_path(customer) %></li>
    <% end %>
  </ul>
  <hr />
<% end %>

<h1>Register new customer</h1>

<%= form_for @customer do |f| %>
  <div class="field">
    <%= f.label :name, "Full Name" %><br/>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :phone %><br/>
    <%= f.text_field :phone %>
  </div>

  <div class="field">
    <%= f.label :email %><br/>
    <%= f.text_field :email %>
  </div>

  <%= f.submit "Submit" %>
<% end %>

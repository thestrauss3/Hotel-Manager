<%= link_to 'Customer Index', customers_path %>
<h1>Customer details for <%= @customer.name %></h1>
<li><%= @customer.phone %></li>
<li><%= @customer.email %></li>

<%= link_to 'Create new reservation for this customer', new_customer_booking_path(@customer) %>

<div class='row small-up-1 large-up-2'>
  <%= render 'layouts/bookings', bookings: @current_bookings, title: 'Active Bookings' %>
  <%= render 'layouts/bookings', bookings: @future_bookings, title: 'Reservations' %>
  <%= render 'layouts/bookings', bookings: @past_bookings, title: 'Past Bookings' %>
  <%= render 'layouts/bookings', bookings: @cancelled_bookings, title: 'Cancellations' %>
</div>
